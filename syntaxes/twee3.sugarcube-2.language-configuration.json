{
	"comments": {
		"blockComment": [
			["<!--", "-->"]
		]
	},
    // symbols used as brackets
    // For SugarCube 2, we don't treat Twee links (`[[...]]`) as brackets
    // since it supports mid-link setters (`[[...][...]]`)
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
		["<", ">"],
		{
			"open": "<!--",
			"close": "-->",
			"notIn": [
				"comment",
				"string"
			]
		},
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"],
        ["<", ">"],
    ],
	"folding": {
		"markers": {
			"start": "^\\s*<!--\\s*#?region\\b",
			"end": "^\\s*<!--\\s*#?endregion\\b"
		}
	},
}